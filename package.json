{
    "name": "auth-service",
    "version": "1.0.0",
    "description": "A user management service",
    "main": "index.js",
    "scripts": {
        "dev": "cross-env NODE_ENV=dev nodemon src/server.ts",
        "build": "tsc",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --write",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prepare": "husky",
        "test:watch": "jest --watch --runInBand",
        "test": "jest --no-cache --coverage --all --runInBand",
        "start": "ts-node src/index.ts",
        "migration:generate": "cross-env NODE_ENV=dev typeorm-ts-node-commonjs migration:generate",
        "migration:run": "cross-env NODE_ENV=dev typeorm-ts-node-commonjs migration:run",
        "migration:create": "cross-env NODE_ENV=dev typeorm-ts-node-commonjs migration:create",
        "migration:revert": "cross-env NODE_ENV=dev typeorm-ts-node-commonjs migration:revert"
    },
    "author": "akhil <rajanakhil07@gmail.com>",
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "^9.9.1",
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/eslint__js": "^8.42.3",
        "@types/express": "^4.17.21",
        "@types/http-errors": "^2.0.4",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^16.11.10",
        "@types/supertest": "^6.0.2",
        "cross-env": "^7.0.3",
        "eslint": "^9.9.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "husky": "^9.1.5",
        "jest": "^29.7.0",
        "jwks-rsa": "^3.1.0",
        "lint-staged": "^15.2.9",
        "mock-jwks": "^1.0.10",
        "nodemon": "^3.1.4",
        "prettier": "3.3.3",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-node": "10.9.1",
        "typescript": "4.5.2",
        "typescript-eslint": "^8.2.0"
    },
    "dependencies": {
        "@types/node": "^22.5.0",
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.20.0",
        "express-jwt": "^8.4.1",
        "http-errors": "^2.0.0",
        "http-status-codes": "^2.3.0",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.4.0",
        "reflect-metadata": "^0.1.13",
        "rsa-pem-to-jwk": "^1.1.3",
        "typeorm": "0.3.20",
        "winston": "^3.14.2",
        "zod": "^3.23.8"
    },
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    }
}
